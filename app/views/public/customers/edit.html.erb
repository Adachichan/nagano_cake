<div class = "container">

  <div class = "col-3 h4 mt-4 bg-light text-black text-center">
    &ensp;会員情報編集&ensp;
  </div>

</div>

<div class = "container ml-5">
  <div class = "mt-3 mx-sm-0">

    <%= form_with model: @customer, url: public_customer_update_path do |f| %>

      <table class = "table table-borderless">

        <tr>
          <td class = "align-middle">氏名</td>
          <td>
            <div class = "field">
              <%= f.text_field :last_name, :size=>"30", class: "form-control border-dark" %>
            </div>
          </td>
          <td>
            <div class = "field">
              <%= f.text_field :first_name, :size=>"30", class: "form-control border-dark" %>
            </div>
          </td>
        </tr>

      </table>

    <% end %>

  </div>
</div>