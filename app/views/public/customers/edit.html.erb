<div class = "container">

  <div class = "h4 mt-4 bg-light text-black text-center" style = "width:260px">
    &ensp;会員情報編集&ensp;
  </div>

</div>

<div class = "container ml-5">
  <div class = "mt-3 mx-sm-0">

    <table class = "table table-borderless" style= "width: 950px">

      <%= form_with model: @customer, url: public_customer_update_path do |f| %>

        <tr>
          <td class = "align-middle" style = "width: 200px">氏名</td>
          <td style = "width: 300px">
            <div class = "field">
              <%= f.text_field :last_name, class: "form-control border-dark" %>
            </div>
          </td>
          <td style = "width: 10px"></td>
          <td style = "width: 300px">
            <div class = "field">
              <%= f.text_field :first_name, class: "form-control border-dark" %>
            </div>
          </td>
        </tr>

        <tr>
          <td class = "pt-0 align-middle" style = "width: 200px">フリガナ</td>
          <td class = "pt-0" style = "width: 300px">
            <div class = "field">
              <%= f.text_field :last_name_kana, class: "form-control border-dark" %>
            </div>
          </td>
          <td style = "width: 10px"></td>
          <td class = "pt-0" style = "width: 300px">
            <div class = "field">
              <%= f.text_field :first_name_kana, class: "form-control border-dark" %>
            </div>
          </td>
        </tr>

        <tr>
          <td class = "pt-0 align-middle" style = "width: 200px">郵便番号</td>
          <td class = "pt-0" style = "width: 300px">
            <div class = "field">
              <%= f.text_field :postal_code, class: "form-control border-dark" %>
            </div>
          </td>
        </tr>

        <tr>
          <td class = "pt-0 align-middle" style = "width: 200px">住所</td>
          <td class = "pt-0" colspan = "4">
            <div class = "field">
              <%= f.text_field :address, class: "form-control border-dark" %>
            </div>
          </td>
        </tr>

        <tr>
          <td class = "pt-0 align-middle" style= "width: 200px">電話番号</td>
          <td class = "pt-0" style = "width: 300px">
            <div class = "field">
              <%= f.text_field :telephone_number, class: "form-control border-dark" %>
            </div>
          </td>
        </tr>

        <tr>
          <td class = "pt-0 align-middle" style= "width: 200px">メールアドレス</td>
          <td class = "pt-0" style = "width: 300px">
            <div class = "field">
              <%= f.text_field :email, class: "form-control border-dark" %>
            </div>
          </td>
        </tr>

        <tr>
          <td class = "pt-4" style = "width: 200px"></td>
          <td class = "pt-4" colspan = "2">
            <%= f.submit "　　編集内容を保存　　", class: "btn btn-success form-control col-12" %>
          </td>
          <td style = "width: 300px"></td>
          <td class = "pt-4" style = "width: 140px">
          </td>
        </tr>

      <% end %>

    </table>

  </div>
</div>