<div class = "container">

  <div class = "col-3 h4 mt-4 bg-light text-black text-center">
    &ensp;マイページ&ensp;
  </div>

</div>

<div class = "container ml-3">
  <div class = "mt-4">
    <b class = "col-2">登録情報</b>
    <span class = "mx-2"><%= link_to "　編集する　", public_customer_edit_path, class: "btn btn-success form-control col-2 font-weight-bold" %></span>
  </div>

  <div class = "row ml-3 mt-4 h6">
    <table class = "table table-bordered" style= "width: 700px">

      <tr>
        <td class = "pl-2 py-3 border-dark bg-light" style= "width: 200px">氏名</td>
        <td class = "pl-2 py-3 border-dark" style= "width: 500px">
          <%= @customer.last_name %>&ensp;<%= @customer.first_name %>
        </td>
      </tr>

      <tr>
        <td class = "pl-2 py-3 border-dark bg-light" style= "width: 200px">カナ</td>
        <td class = "pl-2 py-3 border-dark" style= "width: 500px">
          <%= @customer.last_name_kana %>&ensp;<%= @customer.first_name_kana %>
        </td>
      </tr>

      <tr>
        <td class = "pl-2 py-3 border-dark bg-light" style= "width: 200px">郵便番号</td>
        <td class = "pl-2 py-3 border-dark" style= "width: 500px">
          <%= @customer.postal_code %>
        </td>
      </tr>

      <tr>
        <td class = "pl-2 py-3 border-dark bg-light" style= "width: 200px">住所</td>
        <td class = "pl-2 py-3 border-dark" style= "width: 500px">
          <%= @customer.address %>
        </td>
      </tr>

      <tr>
        <td class = "pl-2 py-3 border-dark bg-light" style= "width: 200px">電話番号</td>
        <td class = "pl-2 py-3 border-dark" style= "width: 500px">
          <%= @customer.telephone_number %>
        </td>
      </tr>

      <tr>
        <td class = "pl-2 py-3 border-dark bg-light" style= "width: 200px">メールアドレス</td>
        <td class = "pl-2 py-3 border-dark" style= "width: 500px">
          <%= @customer.email %>
        </td>
      </tr>

    </table>
  </div>

  <div class = "mt-3">
    <b class = "col-2">配送先</b>
    <span class = "mx-4"><%= link_to "　一覧を見る　", delivery_addresses_path, class: "btn btn-primary form-control col-2 font-weight-bold" %></span>
  </div>

  <div class = "mt-3">
    <b class = "col-2">注文履歴</b>
    <span class = "mx-2"><%= link_to "　一覧を見る　", orders_path, class: "btn btn-primary form-control col-2 font-weight-bold" %></span>
  </div>

</div>