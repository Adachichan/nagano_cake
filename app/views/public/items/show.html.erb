<div class = "container-xxl mx-auto mt-5" style = "width: 1320px">

  <div class = "row">
    <div class = "col-2">

      <div class = "py-1 font-weight-bold text-center border border-dark" style = "width: 180px; font-size: 0.9rem">
        ジャンル検索
      </div>

      <div class = "border-left border-right border-bottom border-dark pt-1" style = "width: 180px; height: 400px;">
        <% @genre_list.each do |genre| %>

          <div class = "py-2 pl-3" style = "font-size: 0.9rem">
            <%= link_to genre.name, items_path(genre_id: genre.id), class: "text-dark" %>
          </div>

        <% end %>
      </div>

    </div>

    <div class = "col-10">

      <%= form_with model: @cart_item, url: cart_items_path do |f| %>

        <%= f.hidden_field :item_id, :value => @item.id %>

        <div class = "row">
          <div class = "col-5">
            <%= image_tag @item.get_item_image("350") %>
          </div>

          <div class = "col-7 mt-3">
            <div class = "h2" style = "width: 600px">
              <%= @item.name %>
            </div>

            <div class = "mt-3" style = "width: 600px; font-size: 1.5rem">
              <%= @item.introduction %>
            </div>

            <div class = "mt-5 " style = "width: 600px; font-size: 1.6rem">
              ￥&nbsp;<%= (@item.price + @item.price * 0.1).round.to_s(:delimited) %>
              <span style = "font-size: 0.8rem">
                (税込)
              </span>
            </div>

            <div class = "d-flex align-items-center mt-4">
              <div class = "item-order-count-select-design" style = "width: 300px">
                <%= f.select :amount, *[1..10], prompt: "個数選択" %>
              </div>
              <div style = "width: 250px">
                <%= f.submit "カートに入れる", class: "btn btn-success form-control font-weight-bold col-8", style: "height: 40px" %>
              </div>
            </div>
          </div>
        </div>

      <% end %>

    </div>

  </div>

</div>