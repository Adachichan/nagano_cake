<div class = "container-xxl mx-auto mt-5" style = "width: 1320px">

  <div class = "row">
    <div class = "col-2">
      ジャンル検索（仮）
    </div>

    <div class = "col-10">

      <div class = "row">
        <div class = "col-5">
          <%= image_tag @item.get_item_image("350") %>
        </div>

        <div class = "col-7 mt-3">
          <div class = "h2" style = "width: 600px">
            <%= @item.name %>
          </div>

          <div class = "mt-3" style = "width: 600px; font-size: 1.5rem">
            <%= @item.introduction %>
          </div>

          <div class = "mt-5 " style = "width: 600px; font-size: 1.5rem">
            ￥&nbsp;<%= (@item.price + @item.price * 0.1).round.to_s(:delimited) %>
            <span style = "font-size: 0.8rem">
              (税込)
            </span>
          </div>

          <div class = "d-flex align-items-center mt-4">
            <div style = "width: 300px">
            </div>
            <div style = "width: 250px">
              <%= link_to "カートに入れる", cart_items_path, class: "btn btn-success form-control font-weight-bold col-8", style: "height: 40px" %>
            </div>
          </div>

        </div>

      </div>



    </div>

  </div>
</div>