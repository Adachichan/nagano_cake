<div class = "container">

  <div class = "h4 mt-4 bg-light text-black text-center" style = "width:260px">
    &ensp;配送先登録/一覧&ensp;
  </div>

</div>

<div class = "container ml-5">
  <div class = "mt-5 mx-sm-0">

    <%= form_with model: @delivery_address, url: delivery_addresses_path do |f| %>

      <div class = "d-flex align-items-center">
        <div style = "width: 230px">郵便番号(ハイフンなし)</div>
        <div style = "width: 350px">
          <%= f.text_field :postal_code, class: "form-control border-dark" %>
        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-3" style = "width: 230px">住所</div>
        <div class = "mt-3" style = "width: 600px">
          <%= f.text_field :address, class: "form-control border-dark" %>
        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-3" style = "width: 230px">宛名</div>
        <div class = "mt-3" style = "width: 350px">
          <%= f.text_field :name, class: "form-control border-dark" %>
        </div>
        <div class = "mt-3" style = "width: 300px"></div>
        <div class = "mt-3" style = "width: 200px">
          <%= f.submit "新規登録", class: "btn btn-success form-control font-weight-bold col-8" %>
        </div>
      </div>

    <% end %>

  </div>
</div>

<div class = "container ml-3">
  <div class = "row ml-3 mt-4" style = "font-size:0.9rem">
    <table class = "table table-bordered" style = "width: 900px">

      <thead class =  "bg-light">
        <tr>
          <th class = "border border-dark" style = "width: 100px">郵便番号</th>
          <th class = "border border-dark" style = "width: 400px">住所</th>
          <th class = "border border-dark" style = "width: 150px">宛名</th>
          <th class = "border border-dark" style = "width: 250px"></th>
        </tr>
      </thead>

      <tbody>
        <% @delivery_address_list.each do |delivery_address| %>

          <tr class>
            <td class = "border border-dark align-middle" style = "width: 100px">
                <%= delivery_address.postal_code %>
            </td>
            <td class = "border border-dark align-middle" style = "width: 400px">
              <%= delivery_address.address %>
            </td>
            <td class = "border border-dark align-middle" style = "width: 150px">
              <%= delivery_address.name %>
            </td>
            <td class = "border border-dark align-middle" style = "width: 250px">
              <%= link_to "編集する", edit_delivery_address_path(delivery_address.id), class: "btn btn-success form-control col-5 ml-2 p-1", style: "height: 35px" %>
              <%= link_to "削除する", delivery_address_path(delivery_address.id), method: :delete, class: "btn btn-danger form-control col-5 ml-2 p-1", style: "height: 35px" %>
            </td>
          </tr>

        <% end %>
      </tbody>

    </table>
  </div>
</div>