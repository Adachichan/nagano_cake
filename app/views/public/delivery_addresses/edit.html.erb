<div class = "container">

  <div class = "h4 mt-4 bg-light text-black text-center" style = "width:260px">
    &ensp;配送先編集&ensp;
  </div>

</div>

<div class = "container ml-5">
  <div class = "mt-3 mx-sm-0">

    <%= form_with model: @delivery_registration, url: delivery_address_path do |f| %>

      <table class = "table table-borderless" style= "width: 1130px">

        <tr>
          <td class = "align-middle" style = "width: 230px">郵便番号(ハイフンなし)</td>
          <td style = "width: 350px">
            <%= f.text_field :postal_code, class: "form-control border-dark" %>
          </td>
        </tr>

        <tr>
          <td class = "pt-0 align-middle" style = "width:230px">住所</td>
          <td class = "pt-0"  colspan = "2">
            <%= f.text_field :address, class: "form-control border-dark" %>
          </td>
        </tr>

        <tr>
          <td class = "pt-0 align-middle" style = "width: 230px">宛名</td>
          <td class = "pt-0" style = "width 350px">
            <%= f.text_field :name, class: "form-control border-dark" %>
          </td>
          <td class = "pt-0" style = "width: 350px"></td>
          <td class = "pt-0" style = "width: 200px">
            <%= f.submit "　 変更内容を保存 　", class: "btn btn-success form-control font-weight-bold col-12" %>
          </td>

      </table>

    <% end %>

  </div>
</div>
