<div class = "container">

  <div class = "h4 mt-4 bg-light text-black text-center" style = "width:260px">
    &ensp;配送先編集&ensp;
  </div>

</div>

<div class = "container ml-5">
  <div class = "mt-5 mx-sm-0">

    <%= form_with model: @delivery_address, url: delivery_address_path do |f| %>

      <div class = "d-flex align-items-center">
        <div style = "width: 230px">郵便番号(ハイフンなし)</div>
        <div style = "width: 350px">
          <%= f.text_field :postal_code, class: "form-control border-dark" %>
        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-3" style = "width: 230px">住所</div>
        <div class = "mt-3" style = "width: 600px">
          <%= f.text_field :address, class: "form-control border-dark" %>
        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-3" style = "width: 230px">宛名</div>
        <div class = "mt-3" style = "width: 350px">
          <%= f.text_field :name, class: "form-control border-dark" %>
        </div>
        <div class = "mt-3" style = "width: 300px"></div>
        <div class = "mt-3" style = "width: 200px">
          <%= f.submit "変更内容を保存", class: "btn btn-success form-control font-weight-bold col-12" %>
        </div>
      </div>

    <% end %>

  </div>
</div>
