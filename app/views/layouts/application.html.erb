<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <!-- header(動的) -->
  <header>
    <nav class = "navbar navbar-expand-lg navbar-light border-secondary border-bottom pb-3" style = "background-color: white">
      <div class = "container">

        <button class = "navbar-toggler" type = "button" data-toggle = "collapse" data-target = "#navbarNavDropdown" aria-controls = "navbarNavDropdown" aria-expanded = "false" aria-label = "Toggle navigation">
          <span class = "navbar-toggler-icon"></span>
        </button>
        <div class = "collapse navbar-collapse" id = "navbarNavDropdown">
          <ul class = "navbar-nav ml-auto my-4">

            <% if admin_signed_in? %>

              <li class = "nav-item">
                <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-secondary mx-3 px-1", style: "width: 110px" %>
              </li>

              <li class = "nav-item">
                <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-secondary mx-3 px-1", style: "width: 110px" %>
              </li>

              <li class = "nav-item">
                <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-secondary mx-3 px-1", style: "width: 110px" %>
              </li>

              <li class = "nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-secondary mx-3 px-1", style: "width: 110px" %>
              </li>

            <% elsif customer_signed_in? %>

              <li class = "nav-item">
                <%= link_to "マイページ", public_customer_show_path, class: "btn btn-outline-secondary mx-3 px-1", style: "width: 110px" %>
              </li>

              <li class = "nav-item">
                <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary mx-3 px-1", style: "width: 110px" %>
              </li>

              <li class = "nav-item">
                <%= link_to "カート", cart_items_path, class: "btn btn-outline-secondary mx-3 px-1", style: "width: 110px" %>
              </li>

              <li class = "nav-item">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-secondary mx-3 px-1", style: "width: 110px" %>
              </li>

            <% else %>
              <li class = "nav-item">
                <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-secondary mx-3 px-1", style: "width: 110px" %>
              </li>

              <li class = "nav-item">
                <%= link_to "　ログイン　", new_customer_session_path, class: "btn btn-outline-secondary mx-3 px-1", style: "width: 110px" %>
              </li>

            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
