<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>]

  <!-- header(動的) -->
  <header>
    <nav class = "navbar navbar-expand-lg navbar-light border-secondary border-bottom pb-3" style = "background-color: white">
      <div class = "container">


        <button class = "navbar-toggler" type = "button" data-toggle = "collapse" data-target = "#navbarNavDropdown" aria-controls = "navbarNavDropdown" aria-expanded = "false" aria-label = "Toggle navigation">
          <span class = "navbar-toggler-icon"></span>
        </button>
        <div class = "collapse navbar-collapse" id = "navbarNavDropdown">
          <ul class = "navbar-nav ml-auto">

            <% if admin_signed_in? %>

              <li class = "nav-item">
                <%= link_to destroy_admin_session_path, method: :delete do %>
                  <button class="btn btn-outline-secondary mx-3" type="button">&ensp;ログアウト&ensp;</button>
                <% end %>
              </li>

            <% elsif customer_signed_in? %>

              <li class = "nav-item">
                <%= link_to destroy_customer_session_path, method: :delete do %>
                  <button class="btn btn-outline-secondary mx-3" type="button">&ensp;ログアウト&ensp;</button>
                <% end %>
              </li>

            <% else %>
              <li class = "nav-item">
                <%= link_to new_customer_registration_path do %>
                  <button class="btn btn-outline-secondary mx-3" type="button">&ensp;新規登録&ensp;</button>
                <% end %>
              </li>

              <li class = "nav-item">
                <%= link_to new_customer_session_path do %>
                  <button class="btn btn-outline-secondary mx-3" type="button">&ensp;ログイン&ensp;</button>
                <% end %>
              </li>

            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
