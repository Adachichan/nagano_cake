<div class = "container">

  <div class = "h4 mt-4 bg-light text-black text-center" style = "width:260px">
    &ensp;ジャンル編集&ensp;
  </div>

</div>

<div class = "container ml-5">
  <div class = "mt-5 pt-3 mx-sm-0">

    <%= form_with model: @genre, url: admin_genre_path(@genre.id) do |f| %>

      <div class = "d-flex align-items-center">
        <div style = "width: 150px">ジャンル名</div>
        <div class = "mr-4" style = "width: 345px">
          <%= f.text_field :name, class: "form-control border-dark" %>
        </div>
        <div class = "ml-5" style = "width: 150px">
          <%= f.submit "変更を保存", class: "btn btn-success form-control font-weight-bold col-12" %>
        </div>
      </div>

    <% end %>

  </div>
</div>
