<div class = "container ml-5">

  <div class = "h4 mt-4 ml-5 bg-light text-black text-center" style = "width:350px">
    &ensp;<%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集&ensp;
  </div>

  <div class = "mt-4 pl-5 mx-sm-0">

    <%= form_with model: @customer, url: admin_customer_path do |f| %>

      <div class = "d-flex align-items-center">
        <div style = "width: 200px">会員ID</div>
        <div style = "width: 260px">
           <%= @customer.id %>
        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-3 align-middle" style = "width: 200px">氏名</div>
        <div class = "mt-3" style = "width: 260px">
          <%= f.text_field :last_name, class: "form-control border-dark" %>
        </div>
        <div class = "mt-3" style = "width: 30px"></div>
        <div class = "mt-3" style = "width: 260px">
          <%= f.text_field :first_name, class: "form-control border-dark" %>
        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-3" style = "width: 200px">フリガナ</div>
        <div class = "mt-3" style = "width: 260px">
          <%= f.text_field :last_name_kana, class: "form-control border-dark" %>
        </div>
        <div class = "mt-3" style = "width: 30px"></div>
        <div class = "mt-3" style = "width: 260px">
            <%= f.text_field :first_name_kana, class: "form-control border-dark" %>
        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-3" style = "width: 200px">郵便番号</div>
        <div class = "mt-3" style = "width: 260px">
            <%= f.text_field :postal_code, class: "form-control border-dark" %>
        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-3" style = "width: 200px">住所</div>
        <div class = "mt-3" style = "width: 750px">
            <%= f.text_field :address, class: "form-control border-dark" %>
        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-3" style= "width: 200px">電話番号</div>
        <div class = "mt-3" style = "width: 260px">
            <%= f.text_field :telephone_number, class: "form-control border-dark" %>
        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-3" style = "width: 200px">メールアドレス</div>
        <div class = "mt-3" style = "width: 260px">
            <%= f.text_field :email, class: "form-control border-dark" %>
        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-3" style = "width: 200px">会員ステータス</div>
        <div class = "mt-4" style = "width: 260px">

          <!-- 有効時 -->
          <% if @customer.is_deleted == true %>
            <%= f.radio_button :is_deleted, :false%>
            <%= f.label :is_deleted, "有効" %>
            <%= f.radio_button :is_deleted, :true, class: "ml-4", checked: "checked" %>
            <%= f.label :is_deleted, "退会" %>

          <!-- 退会時 -->
          <% else %>
            <%= f.radio_button :is_deleted, :false, checked: "checked" %>
            <%= f.label :is_deleted, "有効" %>
            <%= f.radio_button :is_deleted, :true, class: "ml-4" %>
            <%= f.label :is_deleted, "退会" %>

          <% end %>

        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-5" style = "width: 200px"></div>
        <div class = "mt-4" style = "width: 260px">
          <%= f.submit "変更を保存", class: "btn btn-success form-control  font-weight-bold col-7", style: "height: 40px" %>
        </div>
      </div>

    <% end %>

  </div>
</div>








