<div class = "container">

  <div class = "h4 mt-4 bg-light text-black text-center" style = "width:350px">
    &ensp;<%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細&ensp;
  </div>

  <div class = "row ml-0 mt-4" style = "font-size:0.9rem">
    <table class = "table table-borderless" style = "width: 700px">

      <tr>
        <td class = "pl-2 py-2" style = "width: 200px">会員ID</td>
        <td class = "pl-2 py-2" style = "width: 500px">
          <%= @customer.id %>
        </td>
      </tr>

      <tr>
        <td class = "pl-2 py-2" style = "width: 200px">氏名</td>
        <td class = "pl-2 py-2" style= "width: 500px">
          <%= @customer.last_name %>&ensp;<%= @customer.first_name %>
        </td>
      </tr>

      <tr>
        <td class = "pl-2 py-2" style = "width: 200px">フリガナ</td>
        <td class = "pl-2 py-2" style = "width: 500px">
          <%= @customer.last_name_kana %>&ensp;<%= @customer.first_name_kana %>
        </td>
      </tr>

      <tr>
        <td class = "pl-2 py-2" style = "width: 200px">郵便番号</td>
        <td class = "pl-2 py-2" style = "width: 500px">
          <%= @customer.postal_code %>
        </td>
      </tr>

      <tr>
        <td class = "pl-2 py-2" style= "width: 200px">住所</td>
        <td class = "pl-2 py-2" style= "width: 500px">
          <%= @customer.address %>
        </td>
      </tr>

      <tr>
        <td class = "pl-2 py-2" style= "width: 200px">電話番号</td>
        <td class = "pl-2 py-2" style= "width: 500px">
          <%= @customer.telephone_number %>
        </td>
      </tr>

      <tr>
        <td class = "pl-2 py-2" style= "width: 200px">メールアドレス</td>
        <td class = "pl-2 py-2" style= "width: 500px">
          <%= @customer.email %>
        </td>
      </tr>

      <tr>
        <td class = "pl-2 py-2" style= "width: 200px">会員ステータス</td>
        <td class = "pl-2 py-2" style= "width: 500px">

          <!-- 退会時の処理 -->
          <% if @customer.is_deleted == true %>
            <p class = "font-weight-bold m-0" style = "color: #CCCCCC">退会</p>

          <!-- 退会していない時の処理 -->
          <% else %>
            <p class = "font-weight-bold text-success m-0">有効</p>

          <% end %>

        </td>
      </tr>
    </table>

    <table class = "table table-borderless" style = "width: 670px">
      <tr>
        <td style = "width: 200px"></td>
        <td style = "width: 160px">
          <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success form-control col-12" %>
        </td>
        <td style = "width: 90px"></td>
        <td style = "width: 220px">
          <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary form-control col-12" %>
        </td>
      </tr>

    </table>
  </div>
</div>
