<div class = "container">

  <div class = "h4 mt-4 bg-light text-black text-center" style = "width:150px">
    &ensp;商品一覧&ensp;
  </div>

  <div class = "row justify-content-center mt-4 ml-0" style = "font-size:0.9rem">
    <table class = "table" style = "width: 1000px">

      <thead class =  "bg-light">
        <tr>
          <th class = "p-2 border-dark" style = "width: 100px">商品ID</th>
          <th class = "p-2 border-dark" style = "width: 350px">商品名</th>
          <th class = "p-2 border-dark" style = "width: 100px">税抜価格</th>
          <th class = "p-2 border-dark" style = "width: 300px">ジャンル</th>
          <th class = "p-2 border-dark" style = "width: 150px">ステータス</th>
        </tr>
      </thead>

      <tbody>
         <% @item_list.each do |item| %>

          <tr>
            <td class = "align-middle border-dark" style = "width: 100px">
              <%= item.id %>
            </td>
            <td class = "align-middle border-dark" style = "width: 350px">
              <%= link_to item.name, admin_item_path(item.id), class: "text-dark" %>
            </td>
            <td class = "align-middle border-dark" style = "width: 100px">
              <%= item.price.to_s(:delimited) %>
            </td>
            <td class = "align-middle border-dark" style = "width: 300px">
              <%= item.genre.name %>
            </td>
            <td class = "align-middle border-dark" style = "width: 150px">

              <!-- 退会時の処理 -->
              <% if item.is_sold == true %>
                <p class = "font-weight-bold m-0" style = "color: #CCCCCC">販売停止中</p>

              <!-- 退会していない時の処理 -->
              <% else %>
                <p class = "font-weight-bold text-success m-0">販売中</p>

              <% end %>
            </td>
          </tr>

        <% end %>
      </tbody>

      <tfoot>
        <tr>
          <td class = "align-middle border-dark"  colspan = "5">
            <%= paginate @item_list %>
          </td>
        </tr>
      </tfoot>

    </table>
  </div>
</div>
