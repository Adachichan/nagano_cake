<div class = "container">

  <div class = "h4 mt-4 bg-light text-black text-center" style = "width:260px">
    &ensp;商品新規登録&ensp;
  </div>

  <div class = "row justify-content-center mt-5">

    <%= form_with model: @item, url: admin_items_path do |f| %>

      <div class = "d-flex align-items-center">
        <div style = "width: 170px">商品画像</div>
        <div style = "width: 350px">
          <div class = "custom-file" style = "height: 0px">
            <%= f.file_field :item_image, accept: "image/*" %>
          </div>
        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-3" style = "width: 170px">商品名</div>
        <div class = "mt-3" style = "width: 350px">
          <%= f.text_field :name, class: "form-control border-dark" %>
        </div>
      </div>

      <div class = "d-flex">
        <div class = "mt-3 pt-1 align-top" style = "width: 170px">商品説明</div>
        <div class = "mt-3 align-center" style = "width: 350px">
          <%= f.text_area :introduction, class: "form-control border-dark", rows: 6 %>
        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-3" style = "width: 170px">ジャンル</div>
        <div class = "mt-3 item-genre-select-design" style = "width: 350px">
          <%= f.collection_select :genre_id, @genre_list, :id, :name, prompt: "--選択してください--" %>
        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-3" style = "width: 170px">税抜価格</div>
        <div class = "mt-3" style = "width: 350px">
          <%= f.text_field :price, class: "form-control border-dark" %>
        </div>
        <div class = "mt-3 ml-3" style = "width: 30px">円</div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-3" style = "width: 170px">販売ステータス</div>
        <div class = "mt-4" style = "width: 350px">

          <%= f.radio_button :is_sold, :false, checked: "checked" %>
          <%= f.label :is_sold, "販売中" %>
          <%= f.radio_button :is_sold, :true, class: "ml-4" %>
          <%= f.label :is_sold, "販売停止中" %>

        </div>
      </div>

      <div class = "d-flex align-items-center">
        <div class = "mt-4" style = "width: 170px"></div>
        <div class = "mt-4 text-center" style = "width: 350px">
          <%= f.submit "新規登録", class: "btn btn-success form-control font-weight-bold col-5", style: "height: 40px" %>
        </div>
      </div>

    <% end %>

  </div>
</div>
