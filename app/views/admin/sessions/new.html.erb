<div class = "container">

  <div class = "h4 mt-4 bg-light text-black text-center" style = "width:260px">
    &ensp;管理者ログイン&ensp;
  </div>

  <div class = "row justify-content-center">
    <div class = "mt-4 mx-sm-0">

      <%= form_with model: @admin, url: admin_session_path do |f| %>

        <div class = "d-flex align-items-center">
          <div style = "width: 150px">メールアドレス</div>
          <div style = "width: 550px">
            <%= f.text_field :email, class: "form-control border-dark" %>
          </div>
        </div>

        <div class = "d-flex align-items-center">
          <div class = "mt-3" style = "width: 150px">パスワード</div>
          <div class = "mt-3" style = "width: 550px">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control border-dark" %>
          </div>
        </div>

        <div class = "d-flex align-items-center">
          <div class = "mt-4" style = "width: 150px"></div>
          <div class = "mt-4" style = "width: 550px">
            <%= f.submit "ログイン", class: "btn btn-primary form-control col-4" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
