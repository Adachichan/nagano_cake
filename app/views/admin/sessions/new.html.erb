<div class = "container">

  <div class = "col-3 h4 mt-4 bg-light text-black text-center">
    &ensp;管理者ログイン&ensp;
  </div>

  <div class = "row justify-content-center">
    <div class = "mt-3 mx-sm-0">

      <%= form_with model: @admin, url: admin_session_path do |f| %>

        <table class = "table table-borderless">

          <tr>
            <td>メールアドレス</td>
            <td>
              <div class = "field">
                <%= f.text_field :email, :size=>"60", class: "form-control border-dark" %>
              </div>
            </td>
          </tr>

          <tr>
            <td class = "pt-0">パスワード</td>
            <td class = "pt-0">
              <div class = "field">
                <%= f.password_field :password, autocomplete: "current-password", :size=>"60", class: "form-control border-dark" %>
              </div>
            </td>
          </tr>

          <tr>
            <td class = "pt-4"></td>
            <td class = "pt-4">
              <%= f.submit "　　ログイン　　", class: "btn btn-primary form-control col-4" %>
            </td>
          </tr>

        </table>

      <% end %>
    </div>
  </div>
</div>